{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",  
  "compilerOptions": {
    "target": "ES2023",           
    "module": "NodeNext",             
    "moduleResolution": "NodeNext", 
    "lib": ["es2023"],              
    "types": ["node"],              
    "noEmit": true,                 
    "esModuleInterop": true,        
    "resolveJsonModule": true       
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}
