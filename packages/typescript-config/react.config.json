{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",  
  "compilerOptions": {
    "target": "ES2022",  
    "jsx": "react-jsx",  
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["vite/client"],  
    "noEmit": true,  
    "resolveJsonModule": true,  
    "esModuleInterop": true  
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}
